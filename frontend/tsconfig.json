{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "typeRoots": ["./node_modules/@types", "./global.d.ts"],
    },
    "include": ["src", "../backend/src/types"],
    "exclude": ["node_modules", "dist"]
}
